<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AddsetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/black">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/studio_image"
                android:layout_weight="0"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                tools:src="@drawable/noimage"
                android:padding="@dimen/_5sdp"
                app:civ_border_width="1dp"
                android:background="@color/black"
                app:civ_border_color="#FF000000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:lines="1"
                    android:maxLines="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:text="fjghjhfg"
                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:padding="@dimen/_2sdp"
                    android:id="@+id/studio_name"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:lines="1"
                    android:maxLines="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:text="tjhrthj"
                    android:padding="@dimen/_2sdp"
                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:id="@+id/role_name"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycle_albumlist"/>

    </LinearLayout>

</FrameLayout>