<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:queryHint="Search Here"
            android:layout_gravity="end"
            app:iconifiedByDefault="false"
            android:gravity="end"
            android:padding="@dimen/_5sdp"
            android:background="@color/white"
            android:layout_margin="@dimen/_10sdp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <com.smarteist.autoimageslider.SliderView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:scaleType="fitXY"
                android:id="@+id/home_slider"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="@dimen/_5sdp"
                app:sliderIndicatorRadius="@dimen/_1sdp"
                app:sliderIndicatorSelectedColor="@color/linkcolor"
                app:sliderIndicatorUnselectedColor="#FFFFFF"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="true"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_5sdp"
            app:cardMaxElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardUseCompatPadding="true"
            app:cardElevation="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:layout_margin="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/buttoncolor"
                android:padding="@dimen/_5sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/studio_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/profile"
                    app:civ_border_width="1dp"
                    android:padding="@dimen/_2sdp"
                    app:civ_border_color="#FFFFFF"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp"
                        android:layout_margin="@dimen/_2sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:textStyle="normal"
                            android:fontFamily="@font/bold"
                            android:layout_gravity="start|center"
                            android:gravity="start|center"
                            android:id="@+id/name"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:textStyle="normal"
                            android:fontFamily="@font/regular"
                            android:layout_gravity="end|center"
                            android:gravity="end|center"
                            android:id="@+id/plan"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp"
                        android:layout_margin="@dimen/_2sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:textStyle="normal"
                            android:fontFamily="@font/regular"
                            android:layout_gravity="start|center"
                            android:gravity="start|center"
                            android:id="@+id/option"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:textStyle="normal"
                            android:fontFamily="@font/regular"
                            android:layout_gravity="end|center"
                            android:gravity="end|center"
                            android:id="@+id/days"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:fontFamily="@font/bold"
                android:layout_gravity="start|center"
                android:gravity="start|center"
                android:id="@+id/allname"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Viewall"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:fontFamily="@font/regular"
                android:layout_gravity="end|center"
                android:gravity="end|center"
                android:id="@+id/allview"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycle_alloption"
            android:layout_marginTop="@dimen/_10sdp"/>

    </LinearLayout>

</FrameLayout>